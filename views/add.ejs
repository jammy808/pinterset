<% include ./partials/header.ejs %>

<div class="w-screen h-screen bg-zinc-800 px-10 py-5">

    <h1 class="text-3xl font-bold text-white">Create Your Post</h1>
    <hr class="opacity-20 text-black mt-2">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block text-white font-semibold px-3 mt-10" type="file" name="postImg">

        <input class="block font-semibold px-3 mt-4 border-2 rounded-md w-1/3" type="text" name="title" placeholder="Title">

        <textarea class="h-60 mt-2 border-2 rounded-md w-1/3 px-3" name="description" placeholder="Description"></textarea>

        <input class="block text-white font-semibold px-3 py-2 mt-4 bg-red-500 rounded-md w-1/3 " type="submit" value="Create Post">

    </form>

</div>

